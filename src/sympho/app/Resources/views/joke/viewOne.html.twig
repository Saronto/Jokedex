{% extends 'base.html.twig' %}


{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Jokes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/joke">Les Jokes <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/joke/add">Ajouter une joke</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Joke</th>
            <th scope="col">Likes</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td class="col-1">
                <h5>{{  joke.id  }}</h5>
            </td>
            <td class="col-2">
                <h5>{{  joke.name  }}</h5>
            </td>
            <td class="col-4">
                <p>{{ joke.joke  }}</p>
            </td>
            <td class="col-3">
                <div class="d-inline">
                    <p class="text-center">
                        <a href="/joke/dislike/{{ joke.id }}"><strong>-</strong></a>
                        {{  joke.likes  }}
                        <a href="/joke/like/{{ joke.id }}"><strong>+</strong></a>
                    </p>
                </div>
            </td>
            <td class="col-1">
                <a href="/joke/edit/{{ joke.id }}"><strong>Edit</strong></a>
            </td>
            <td class="col-1">
                <a href="/joke/delete/{{ joke.id }}"><strong>Delete</strong></a>
            </td>
        <tr>
        </tbody>
    </table>
{% endblock %}