{% extends 'base.html.twig' %}


{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Jokes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/joke">Les Jokes <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/joke/add">Ajouter une joke</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block content %}
    {% if jokes %}
        <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Joke</th>
            <th scope="col">Likes</th>
        </tr>
        </thead>

        <tbody>
        {% for joke in jokes %}
        <tr>
            <td class="col-3">
                <a href="show/{{ joke.id }}">
                    <h5>{{  joke.name  }}</h5>
                </a>
            </td>
            <td class="col-6">

                <p>{{ joke.joke  }}</p>
            </td>
            <td class="col-3">
                <div class="d-inline">
                    <p class="text-center">
                        <a href="/joke/dislike/{{ joke.id }}"><strong>-</strong></a>
                        {{  joke.likes  }}
                        <a href="/joke/like/{{ joke.id }}"><strong>+</strong></a>
                    </p>
                </div>
            </td>
        <tr>
            {% endfor %}
        </tbody>
    {% else %}
        <h2 class="text-center">Pas de jokes pour le moment</h2>
    {% endif %}


{% endblock %}